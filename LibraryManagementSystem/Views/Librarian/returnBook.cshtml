@{
    ViewBag.Title = "Return Book";
}

<h2>Return Book</h2>

@if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
{
    <p class="error-message">@ViewBag.ErrorMessage</p>
}

@if (!string.IsNullOrEmpty(ViewBag.successMessage))
{
    <p class="success-message">@ViewBag.successMessage</p>
}

@using (Html.BeginForm("returnBook", "Librarian", FormMethod.Post))
{
    <div>
        <label for="studentID">Student ID:</label>
        <input type="number" id="studentID" name="studentID" required />
    </div>
    <div>
        <label for="bookid">Book Name:</label>
        <input type="text" id="bookid" name="bookid" required />
    </div>
    <div>
        <label for="returnDate">Return Date:</label>
        <input type="date" id="returnDate" name="returnDate" required />
    </div>
    <button type="submit">Return Book</button>
}

<p>@Html.ActionLink("Back to Librarian Functions", "LibrarianFunction", "Librarian")</p>

<style>
    .error-message {
        color: red;
    }
</style>

<style>
    .success-message {
        color: green;
    }
</style>