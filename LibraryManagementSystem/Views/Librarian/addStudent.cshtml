@{
    ViewBag.Title = "Add Student";
}

<h2>Add Student</h2>

@if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
{
    <p class="error-message">@ViewBag.ErrorMessage</p>
}

@if (!string.IsNullOrEmpty(ViewBag.successMessage))
{
    <p class="success-message">@ViewBag.successMessage</p>
}

@using (Html.BeginForm("addStudent", "Librarian", FormMethod.Post))
{
    <div>
        <label for="studentName">Student Name:</label>
        <input type="text" id="studentName" name="studentName" required />
    </div>
   
    <div>
        <label for="semester">Semester:</label>
        <input type="number" id="semester" name="semester" required />
    </div>
    <div>
        <label for="username">Username:</label>
        <input type="text" id="username" name="username" required />
    </div>
    <div>
        <label for="password">Password:</label>
        <input type="password" id="password" name="password" required />
    </div>
    <button type="submit">Add Student</button>
}

<p>@Html.ActionLink("Back to Librarian Functions", "LibrarianFunction", "Librarian")</p>

<style>
    .error-message {
        color: red;
    }
</style>

<style>
    .success-message {
        color: green;
    }
</style>