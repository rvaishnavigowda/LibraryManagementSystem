@model string

@{
    ViewBag.Title = "Add Book";
}

<h2>Add Book</h2>

@if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
{
    <p class="error-message">@ViewBag.ErrorMessage</p>
}


@if (!string.IsNullOrEmpty(ViewBag.successMessage))
{
    <p class="success-message">@ViewBag.successMessage</p>
}

@if (!string.IsNullOrEmpty(ViewBag.stockMessage))
{
    <p class="success-message">@ViewBag.stockMessage</p>
}

@using (Html.BeginForm("addBook", "Librarian", FormMethod.Post))
{

    @*<div>
        <label for="BookId"> Book ID:</label>
        <input type="number" id="BookId" name="BookId" required />
    </div>*@
    <div>
        <label for="bookName">Book Name:</label>
        <input type="text" id="bookName" name="bookName" required />
    </div>
    <div>
        <label for="publicationName">Publication Name:</label>
        <input type="text" id="publicationName" name="publicationName" required />
    </div>
    <div>
        <label for="branchName">Branch Name:</label>
        <input type="text" id="branchName" name="branchName" required />
    </div>
    <div>
        <label for="stock">Stock:</label>
        <input type="number" id="stock" name="stock" required />
    </div>
    <button type="submit">Add Book</button>
}

<p>@Html.ActionLink("Back to Librarian Functions", "LibrarianFunction", "Librarian")</p>

<style>
    .error-message {
        color: red;
    }
</style>

<style>
    .success-message {
        color: green;
    }
</style>